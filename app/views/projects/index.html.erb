<p id="notice"><span class="bg-danger text-warning"><%= notice %></span></p>
<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Live app url</th>
      <th>Screenshot path</th>
      <th>Brief description</th>
      <th>Longer description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.live_app_url %></td>
        <td><%= project.screenshot_path %></td>
        <td><%= project.brief_description %></td>
        <td><%= project.longer_description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

