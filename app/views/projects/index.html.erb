<section id="portfolio-2" class="section colored-wrapper">
    <div class="container">
        <ul class="portfolio-filter nav nav-pills">
            <li class="active"><a href="#" data-filter="*">All</a></li>
            <% AppType.all.each do |app_type| %>
            <li><a href="#" data-filter=".<%= app_type.slug %>"><%= app_type.name %></a></li>
            <% end %>
        </ul>
        <!-- /.portfolio-filter -->
        <div class="row">
            <div id="isotope-portfolio-container">
                <% @projects.each do |project| %>
                <div class="col-xs-12 col-sm-6 col-md-4 portfolio-item-wrapper <%= project.app_types.map(&:slug).join(' ') %>">
                    <div class="portfolio-item">
                        <div class="portfolio-thumb">
                            <% if project.primary_image %>
                            <img src="<%= raw("#{project.primary_image.medium.url}") %>" class="img-responsive">
                            <div class="image-overlay"></div>
                            <a href="<%= raw("#{project.primary_image.large.url}") %>" rel="prettyPhoto[pp_gal]"  class="portfolio-zoom"><i class="icon-eye-open"></i></a>
                            <%= link_to raw("<i class=\"icon-link\"></i>"), project, class: "portfolio-link" %>
                            <% end %>
                        </div>
                        <div class="portfolio-content">
                            <h5><%= link_to project.display_name, project %></h5>
                            <p><%= project.brief_description %></p>
                        </div>
                    </div>
                </div>
                <!-- /.portfolio-item-wrapper -->
                <% end %>
            </div>
            <!-- /.isotope-portfolio-container -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
<!-- /#main-wrapper -->
<%= javascript_include_tag "projects_index_js" %>